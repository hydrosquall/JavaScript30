doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Key Detection
    script(type='text/javascript', src='http://www.cornify.com/js/cornify.js')
  body
    script.

        const pressed = [];
        const secretCode = 'totoro';

        const codeLength = secretCode.length;

        window.addEventListener('keyup', (e) => {
            console.log(e.key);
            pressed.push(e.key);
            // make max length the length of keycode. pull from end
            pressed.splice(- codeLength - 1, pressed.length - codeLength);
            console.log(pressed);

            if (pressed.join('').includes(secretCode)) {
                console.log('Ding Ding');
                // make cool unicorn stuff happen.
                cornify_add();
            }
        })
